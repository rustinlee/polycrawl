doctype html
html
  head
    title PolyCrawl
    link(href="/dist/styles/components.min.css" rel="stylesheet" type="text/css")
    link(href="/dist/styles/style.min.css" rel="stylesheet" type="text/css")
    script(src='/dist/js/components.min.js')
    script(src='/dist/js/client.min.js')
    script(src='/socket.io/socket.io.js')
  body
    div#main-view
      div#game
      div#msg-log-container
        div#msg-log
        input#chat-input
      div#stats-pane
        div#hp-bar-container
          div#hp-bar-inner
        div#ap-bar-container
          div#ap-bar-inner
        div#stats-list
          div#con-stat-div
            | CON 
            span#con-stat
          div#str-stat-div
            | STR 
            span#str-stat
          div#dex-stat-div
            | DEX 
            span#dex-stat
          div#agi-stat-div
            | AGI 
            span#agi-stat